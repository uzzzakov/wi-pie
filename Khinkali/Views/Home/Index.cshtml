@{
    ViewData["Title"] = "Главная";
}

<div class="px-4 py-5 my-5 text-center">
    <img class="d-block mx-auto mb-4 img-fluid" src="~/images/icon3.png" alt="">
    <h1 class="display-5 fw-bold head1">Добро пожаловать в Вай-Пай.</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead mb-4 parg">У нас вкуснейшие пироги в городе!</p>
    </div>
    <div class="album py-5 bg-light ">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" alt="Pirog" style="height: 225px; width: 100%; display: block;" src="~/images/pirog.jpg" data-holder-rendered="true">
                        <div class="card-body">
                            <h4 class="card-text">Осетинские пироги</h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="col text-center">
                                    <a asp-controller="Pie" asp-action="Index" class="btn btn-warning" style="font-weight: 500;">Меню</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" alt="Xinkali" style="height: 225px; width: 100%; display: block;" src="~/images/xinkali.jpg" data-holder-rendered="true">
                        <div class="card-body">
                            <h4 class="card-text">Хинкали</h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="col text-center">
                                    <a asp-controller="Khinkali" asp-action="Index" class="btn btn-warning" style="font-weight: 500;">Меню</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" alt="Napitok" style="height: 225px; width: 100%; display: block;" src="~/images/mors.jpg" data-holder-rendered="true">
                        <div class="card-body">
                            <h4 class="card-text">Напитки</h4>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="col text-center">
                                    <a asp-controller="Drink" asp-action="Index" class="btn btn-warning" style="font-weight: 500;">Меню</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>