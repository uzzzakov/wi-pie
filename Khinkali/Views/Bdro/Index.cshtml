@model Khinkali.ViewModels.LoginModel

@{
    ViewData["Title"] = "Login";
}

<form asp-controller="Bdro" asp-action="Index" asp-anti-forgery="true">
<section class="vh-100 gradient-custom">
  <div class="container pt-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <div class="mb-md-5 mt-md-4">

              <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
              <p class="text-white-50 mb-5">Please enter your login and password!</p>

              <div class="validation" asp-validation-summary="ModelOnly"></div>

              <div class="form-outline form-white mb-4">
                <input type="text" asp-for="Name" class="form-control form-control-lg"/>
                <label class="form-label" asp-for="Name">Login</label>
                <span asp-validation-for="Name" />
              </div>

              <div class="form-outline form-white mb-4">
                <input asp-for="Password" type="password" class="form-control form-control-lg" required="" />
                <label asp-for="Password" class="form-label" >Password</label>
                <span asp-validation-for="Password" />
              </div>

              <button class="btn btn-outline-light btn-lg px-5" type="submit">Login</button>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</form>