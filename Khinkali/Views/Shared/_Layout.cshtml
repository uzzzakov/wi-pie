<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Wi-Pie - @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/fontawesome-free-5.15.4-web/css/all.css" />
    <link rel="shortcut icon" href="~/images/icon.png" type="image/x-icon">
</head>
<body>
    <style>
        body{
            background-image: url(/images/bgr5.png);
            background-repeat: repeat;
            background-size: 70%;
        }
        .text-muted {
            color: #000000!important;
        }
        .logo img{
            height: 50px;
        }
    </style>
    <div class="modal fade" id="kontakti" tabindex="-1" role="dialog" aria-labelledby="kontakti" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="kontakti">Контакты</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    Звоните по номеру +7 (925) 25 43 567
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Ок</button>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark justify-content-between">
      <a class="navbar-brand logo" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png"/></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Главная <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Pie" asp-action="Index">Пироги</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Khinkali" asp-action="Index">Хинкали</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Drink" asp-action="Index">Напитки</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" asp-controller="Delivery" asp-action="Index">Доставка</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#" data-toggle="modal" data-target="#kontakti">Контакты</a>
          </li>
        </ul>
      </div>
    </nav>

    <main role="main" class="container">
        @RenderBody()
    </main>

    <div class="container">
      <footer class="py-3 my-4">
        <ul class="nav justify-content-center border-bottom pb-3 mb-3">
          <li class="nav-item"><a asp-controller="Pie" asp-action="Index" class="nav-link px-2 text-muted">Пироги</a></li>
          <li class="nav-item"><a asp-controller="Khinkali" asp-action="Index" class="nav-link px-2 text-muted">Хинкали</a></li>
          <li class="nav-item"><a asp-controller="Drink" asp-action="Index" class="nav-link px-2 text-muted">Напитки</a></li>
          <li class="nav-item"><a asp-controller="Delivery" asp-action="Index" class="nav-link px-2 text-muted">Доставка</a></li>
          <li class="nav-item"><a href="#" data-toggle="modal" data-target="#kontakti" class="nav-link px-2 text-muted">Контакты</a></li>
        </ul>
        <p class="text-center text-muted">© 2022 Wi-Pie</p>
      </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
